<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      
      <div id="error_explanation">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <% @book.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
        <% end %>
      <% end %>
      </div>
      
      <%= form_with model: @book,local:true do |f| %>
        <div class="form-grop mb-3">
          <lavel>Title</lavel>
          <%= f.text_field :title,class: "form-control" %>
        </div>
  
        <div class="form-grop mb-3">
          <lavel>Opinion</lavel>
          <%= f.text_area :body,class: "form-control-file" %>
        </div>
        
        <div class="form-grop mb-3">
          <lavel>Rate</lavel>
          <div class="book-star" data-score="<%= @book.rate %>"></div>
        </div>
  
        <div class="form-grop mb-3">
          <%= f.submit "Create Group", class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  $('.book-star').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>