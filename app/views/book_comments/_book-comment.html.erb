<table class="table table-hover table-inverse">
  <tbody>
    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <br>
        <%= link_to book_comment.user.name, user_path(book_comment.user) %>
      </td>
      <td>
        <%= simple_format book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user.id == current_user.id %>
          <%= link_to "Destroy",book_book_comment_path(book_comment.book_id, book_comment),remote: true, method: :delete,class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>