<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Group</h2>

      <div id="error_explanation">
      <% if @group.errors.any? %>
        <h3><%= @group.errors.count %>error prohibited this obj from being saved:</h3>
        <% @group.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
        <% end %>
      <% end %>
      </div>

      <%= form_with model: @group,local:true do |f| %>
      <div class="form-grop mb-3">
        <lavel>グループ名</lavel>
        <%= f.text_field :name,class: "form-control" %>
      </div>

      <div class="form-grop mb-3">
        <lavel>紹介文</lavel>
        <%= f.text_area :introduction,class: "form-control-file" %>
      </div>

      <div class="form-grop mb-3">
        <lavel>グループ画像</lavel>
        <%= f.attachment_field :image,class: "form-control-file" %>
      </div>

      <div class="form-grop mb-3">
        <%= f.submit "Update Group", class: "btn btn-info"%>
      </div>
      <% end %>
    </div>
  </div>
</div>